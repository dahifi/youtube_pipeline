					<key>COMMAND_STRING</key>
					<string>#!/bin/bash

# Define the base directory for the youtube_pipeline project
baseDir="$HOME/projects/youtube_pipeline"

# Directories for transcriptions and logs
transcriptionDir="$baseDir/transcription"
logDir="$baseDir/logs"

# Ensure that the transcription and log directories exist
mkdir -p "$transcriptionDir"
mkdir -p "$logDir"

logFile="$logDir/asr_transcription_log.txt"

for f in "$@"
do
    echo "$(date "+%Y-%m-%d %H:%M:%S") - File path: $f" &gt;&gt; "$logFile"

    if [ ! -f "$f" ]; then
        echo "$(date "+%Y-%m-%d %H:%M:%S") - File not found: $f" &gt;&gt; "$logFile"
        continue
    fi

    echo "$(date "+%Y-%m-%d %H:%M:%S") - Starting ASR processing for file: $f" &gt;&gt; "$logFile"

    # ASR API endpoint and parameters
    apiEndpoint="http://192.168.1.201:9000/asr"
    task="transcribe"
    language="en"
    initial_prompt=""
    encode="true"
    output="txt"
    word_timestamps="false"
    
    # Define the output filename for the transcription
    outputFilename="$transcriptionDir/$(basename "${f%.*}_transcription.txt")"

    # Prepare the curl command for sending the audio file to the ASR service
    curlCommand="curl -X POST $apiEndpoint -F 'audio_file=@$f' -F 'task=$task' -F 'language=$language' -F 'initial_prompt=$initial_prompt' -F 'encode=$encode' -F 'output=$output' -F 'word_timestamps=$word_timestamps'"
    
    # Execute the curl command and save the output to the transcription file
    eval $curlCommand &gt; "$outputFilename" 2&gt;&gt; "$logFile"
    
    # Check the status of the ASR processing
    if [ $? -eq 0 ]; then
        echo "$(date "+%Y-%m-%d %H:%M:%S") - ASR processing successful. Transcription saved to $outputFilename" &gt;&gt; "$logFile"
    else
        echo "$(date "+%Y-%m-%d %H:%M:%S") - ASR processing failed for $f. Check the log for details." &gt;&gt; "$logFile"
    fi
done
</string>
